# $Header: $

pidfile="/run/eibd/eibd.pid"
command="/usr/bin/eibd"
command_args="${EIBD_ARGS} ${EIBD_URL} --pid-file=${pidfile} -d${EIBD_LOGFILE}"
start_stop_daemon_args="-u ${EIBD_USER}"
description="Daemon for accessing the EIB/KNX bus"

depend() {
	need localmount
	need net
}

start_pre() {
	checkpath --directory --owner ${EIBD_USER} --mode 0774 ${pidfile%/*}
	checkpath --file --owner ${EIBD_USER} --mode 0664 ${EIBD_LOGFILE}
}
